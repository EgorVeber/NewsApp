<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NewsAPI" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary_app</item>
        <item name="colorPrimaryVariant">@color/color_primary_app</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <item name="colorSecondary">@color/color_primary_app</item>
        <item name="colorSecondaryVariant">@color/color_primary_app</item>
        <item name="colorOnSecondary">@color/color_primary_app</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary_app</item>

        <item name="tabStyle">@style/MyTabStyle</item>
        <item name="textInputStyle">@style/MyTextInputStyle</item>
        <item name="materialButtonStyle">@style/MyMaterialButtonStyle</item>
        <item name="switchStyle">@style/MySwitchStyle</item>
        <item name="materialAlertDialogTheme">@style/MyMaterialAlertDialog</item>
        <item name="badgeStyle">@style/CustomBadge</item>
        <item name="colorControlActivated">@color/color_primary_app</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryVariant">@color/color_black</item>
        <item name="colorOnPrimary">@color/color_black</item>
        <item name="colorSecondary">@color/color_black</item>
        <item name="colorSecondaryVariant">@color/color_black</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_black</item>
    </style>

    <style name="Theme.NewsAPI.Dark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorOnPrimary">@color/color_black</item>
        <item name="colorSecondary">@color/color_black</item>
        <item name="colorSecondaryVariant">@color/color_black</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <item name="colorPrimary">@color/color_black</item>
        <item name="colorPrimaryVariant">@color/color_black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_black</item>
    </style>
</resources>