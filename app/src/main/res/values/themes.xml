<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAPI" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/selectedColor</item>
        <!-- Customize your theme here. -->
        <item name="tabStyle">@style/MyTabStyle</item>
        <item name="textInputStyle">@style/MyTextInputStyle</item>
        <item name="materialButtonStyle">@style/MyMaterialButtonStyle</item>
        <item name="switchStyle">@style/MySwitchStyle</item>
    </style>
</resources>