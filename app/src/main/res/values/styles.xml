<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/MyTextAppearanceTab</item>
    </style>

    <style name="MyTextAppearanceTab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/color_primary_app</item>
        <item name="boxStrokeWidth">0.8dp</item>
        <item name="boxStrokeColor">@color/color_primary_app</item>
        <item name="endIconMode">none</item>
        <item name="boxBackgroundColor">@color/color_white</item>
    </style>

    <style name="MyMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/cornerRadiusMaterialButton</item>
        <item name="android:textAppearance">@style/MyTextAppearanceButton</item>
    </style>


    <style name="MyTextAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/MyOverlay</item>
    </style>

    <style name="MyOverlay" parent="">
        <item name="colorSecondary">@color/color_primary_app</item>
    </style>

    <style name="MyMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MyAlertDialogStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MyMaterialAlertDialogTitleTextStyle
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/MyMaterialAlertDialogBodyTextStyle
        </item>
    </style>

    <style name="MyAlertDialogStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/MyMediumComponentDialog</item>
    </style>

    <style name="MyMediumComponentDialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cornerSizeMyMediumComponent</item>
    </style>

    <style name="MyMaterialAlertDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:padding">@dimen/paddingMyMaterialDialog</item>
        <item name="android:textAppearance">@style/MyTextAppearance</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/myTextSizeBody2</item>
    </style>

    <style name="MyMaterialAlertDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="CustomBadge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/color_primary_app</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/color_primary_app</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <item name="shapeAppearanceMediumComponent">@style/MyMediumComponentCalendar</item>
        <item name="materialCalendarHeaderTitle">@style/MyTitleCalendar</item>
    </style>

    <style name="MyMediumComponentCalendar" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/myCornerSizeMediumComponent</item>
    </style>

    <style name="MyTitleCalendar" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceOverline</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
    </style>



    <style name="sources_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="sourceNameBackgroundImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/color_sources_background_image</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/color_primary_app</item>
        <item name="colorControlActivated">@color/color_primary_app</item>
        <item name="colorControlHighlight">@color/color_primary_app</item>
    </style>
    
    <style name="MyAutoCompleteTextViewStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">@color/color_black</item>
        <item name="materialThemeOverlay">@color/color_black</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textCursorDrawable">@drawable/abc_text_cursor_material</item>
    </style>


    <style name="MyFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0.8dp</item>
        <item name="boxStrokeColor">@color/color_primary_app</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxBackgroundColor">@color/color_white</item>
        <item name="theme">@color/color_white</item>
        <item name="android:theme">@style/TextInputLayoutAppearance</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyMaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/cornerRadiusMaterialButton</item>
        <item name="android:textColor">@color/color_primary_app</item>
        <item name="android:textAppearance">@style/MyTextAppearanceButton</item>
    </style>

    <style name="MyMaterialTextButtonDisable" parent="MyMaterialTextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTopMaterialButtonDisable</item>
    </style>

    <style name="progressBarDefault" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="floatingActionButtonDefault" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/color_primary_app</item>
        <item name="tint">@color/color_white</item>
    </style>

    <style name="tabLayoutDefault" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/tabLayoutMargin</item>
        <item name="android:layout_marginEnd">@dimen/tabLayoutMargin</item>
        <item name="android:layout_marginTop">@dimen/tabLayoutMargin</item>
        <item name="tabBackground">@drawable/tabs_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/color_white</item>
        <item name="tabTextColor">@color/color_black</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="cardViewDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/radius_card_view</item>
    </style>

    <style name="behaviorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_peekHeight">0dp</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="buttonTint">@color/color_primary_app</item>
    </style>
</resources>