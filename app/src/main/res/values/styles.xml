<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_style_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">@dimen/margin_card_view</item>
        <item name="cardCornerRadius">@dimen/radius_card_view</item>
    </style>

    <style name="sources_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.App.BottomNavigationView2" parent="Widget.MaterialComponents.BottomNavigationView">
        <!--        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>-->
        <!--        <item name="android:background">@color/black</item>-->
        <!--        <item name="itemIconTint">@color/black</item>-->
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <!--        <item name="colorSurface">@color/teal_300</item>-->
        <!--        <item name="colorOnSurfaceVariant">@color/teal_300</item>-->
    </style>

    <style name="MyTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/MyTextAppearanceTab</item>
    </style>

    <style name="MyTextAppearanceTab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="MyTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/selectedColor</item>
        <item name="boxStrokeWidth">0.8dp</item>
        <item name="boxStrokeColor">@color/selectedColor</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/selectedColor</item>
        <item name="colorControlActivated">@color/selectedColor</item>
        <item name="colorControlHighlight">@color/selectedColor</item>
    </style>

    <style name="MyMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:textAppearance">@style/MyTextAppearanceButton</item>
    </style>

    <style name="MyMaterialTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/selectedColor2</item>
        <item name="android:textAppearance">@style/MyTextAppearanceButton</item>
    </style>

    <style name="MyTextAppearanceButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>


</resources>